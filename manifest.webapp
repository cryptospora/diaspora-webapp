    "icons": {
        "30": "/diaspora-webapp/design/d-30.png",
        "48": "/diaspora-webapp/design/d-48.png",
        "60": "/diaspora-webapp/design/d-60.png",
        "90": "/diaspora-webapp/design/d-90.png",
        "128": "/diaspora-webapp/design/d-128.png"
